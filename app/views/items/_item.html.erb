<% @items.each_with_index do |item, index| %>
  <tr>
    <td class="center"><%= link_to "", [@user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %> <%= index + 1 %></td>
    <td><%= item.name %></td>
    <td><%= distance_of_time_in_words(item.created_at, Time.now) %></td>
  </tr>
<% end %>
